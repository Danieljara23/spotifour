<div class="container show-container">
  <div class="row">
    <div class="col md-12">
      <h1><%=@artist.name %></h1>
      <h3>Albums(<%=@albums.size %>)</h3>
      <div class="row">
        <div class="col-md-9">
          <% @albums.each do |album| %>
            <div class="col-sm-6 col-md-3">
              <div class="thumbnail">
                <img src="<%= album.image_url %>" >
                <div class="caption">
                  <p><strong><%= album.name%></strong></p>
                  <p><%= album.released_at.year%></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-3">
          <img src="<%= @artist.image_url %>" >
        </div>
      </div>
    </div>
  </div>
</div>
